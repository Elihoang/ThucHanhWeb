@model WebBanHang.Models.Product

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <div class="row">
            <!-- Cột ảnh -->
            <div class="col-md-6 text-center">
                <img src="@Model.ImageUrl" alt="Product Image" class="img-fluid rounded shadow" style="max-width: 200px; height: 200px;">
                <div class="mt-3">
                    @if (Model.ImageUrls != null && Model.ImageUrls.Any())
                    {
                        <h5>Additional Images</h5>
                        <div class="d-flex flex-wrap justify-content-center">
                            @foreach (var imageUrl in Model.ImageUrls)
                            {
                                <img src="@imageUrl" alt="Product Image" class="img-thumbnail m-2" style="width: 120px; height: auto;">
                            }
                        </div>
                    }
                </div>
            </div>

            <!-- Cột thông tin sản phẩm -->
            <div class="col-md-6">
                <h2 class="text-primary">ten: @Model.Name</h2>
                <h4 class="text-success">gia: @Model.Price</h4>
                <p class="text-muted">mo ta: @Model.Description</p>
            </div>
        </div>
    </div>
</div>

