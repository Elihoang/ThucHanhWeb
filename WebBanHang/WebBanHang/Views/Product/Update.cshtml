@model WebBanHang.Models.Product

<h2>Cập nhật sản phẩm</h2>

<form asp-action="Update" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>Tên sản phẩm</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label>Giá</label>
        <input asp-for="Price" class="form-control" />
    </div>

    <div class="form-group">
        <label>Mô tả</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label>Danh mục</label>
        <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control"></select>
    </div>

    <div class="form-group">
        <label>Hình ảnh hiện tại</label><br />
        <img src="@Model.ImageUrl" alt="Product Image" style="width: 200px;" />
    </div>

    <div class="form-group">
        <label>Chọn ảnh mới (tùy chọn)</label>
        <input type="file" name="imageUrl" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Cập nhật</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
