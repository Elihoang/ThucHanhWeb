@model WebLab3.Models.Product

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center text-danger">⚠️ Delete Product</h1>
<h3 class="text-center text-muted">Are you sure you want to delete this?</h3>
<hr />

<div class="card shadow-lg p-4">
    <div class="row">
        <!-- Hình ảnh sản phẩm -->
        <div class="col-md-4 text-center">
            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded shadow" style="max-height: 300px;">
        </div>

        <!-- Thông tin sản phẩm -->
        <div class="col-md-8">
            <h4 class="text-secondary">@Model.Name</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-4 fw-bold">Price:</dt>
                <dd class="col-sm-8 text-success">@Model.Price.ToString("C")</dd>

                <dt class="col-sm-4 fw-bold">Description:</dt>
                <dd class="col-sm-8">@Model.Description</dd>

                <dt class="col-sm-4 fw-bold">Category:</dt>
                <dd class="col-sm-8">@Model.Category?.Name</dd>
            </dl>

            <!-- Nút hành động -->
            <form asp-action="DeleteConfirmed" method="post" onsubmit="return confirmDelete();">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary">🔙 Cancel</a>
                    <button type="submit" class="btn btn-danger">🗑️ Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete() {
            return confirm("❗ Are you sure you want to delete this product?");
        }
    </script>
}
