@model IEnumerable<WebLab3.Models.Product>

@{
    ViewData["Title"] = "Product List";
}

<div class="container mt-4">
    <h1 class="text-center mb-4 text-primary fw-bold">Product List</h1>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <a asp-action="Add" class="btn btn-success shadow">
            <i class="fas fa-plus"></i> Create New
        </a>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card border-0 shadow-sm rounded-4 h-100" style="border-radius:20px">

                    <div class="position-relative">
                        <img src="@item.ImageUrl" class="card-img-top img-fluid rounded-top-4"
                             alt="Product Image" style="height: 220px; object-fit: cover;border-top-left-radius: 20px; border-top-right-radius: 20px;">
                        <span class="badge bg-info position-absolute top-0 start-0 m-2 p-2 rounded">
                            @item.Category?.Name
                        </span>
                    </div>

                    <div class="card-body d-flex flex-column text-center">
                        <h5 class="fw-bold text-dark">@item.Name</h5>
                        <h6 class="text-success fw-semibold">$@item.Price</h6>
                        <hr />
                        <p class="card-text text-muted flex-grow-1">@item.Description</p>

                        <div class="d-flex justify-content-center gap-2 mt-auto">
                            <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning btn-sm shadow">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a asp-action="Display" asp-route-id="@item.Id" class="btn btn-info btn-sm text-white shadow">
                                <i class="fas fa-eye"></i> View
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm shadow">
                                <i class="fas fa-trash"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
